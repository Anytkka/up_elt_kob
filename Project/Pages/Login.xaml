<Page x:Class="Project.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="#FFE5E5E5">
        <Grid Margin="202,108,189,109" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>
            <Label Content="Авторизация" Grid.Row="0"
                   HorizontalAlignment="Center"
                   FontFamily="Malgun Gothic" FontWeight="Bold" FontSize="24"/>
            <TextBox Text="Почта xx@xx.xx" x:Name="txtUsername" Grid.Row="2"
                     Height="30" Width="300" Foreground="#FFA6A6A6" 
                     FontFamily="Malgun Gothic" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtPassword" Grid.Row="4"
                     Height="30" Width="300" Text="Пароль" Foreground="#FFA6A6A6" 
                     FontFamily="Malgun Gothic" HorizontalAlignment="Center"/>
            <Button Content="Авторизоваться" Grid.Row="6"
                    Height="34" Background="Black" Foreground="White" 
                    FontWeight="Bold" Click="LoginButton_Click" 
                    HorizontalAlignment="Center" Width="300" 
                    FontFamily="Malgun Gothic"/>
            <TextBlock Text="Или" Grid.Row="8" FontWeight="Bold" 
                      HorizontalAlignment="Center" FontFamily="Malgun Gothic"/>
            <TextBlock Text="Создать аккаунт" Grid.Row="10" 
                       HorizontalAlignment="Center" FontWeight="Bold" 
                       TextDecorations="Underline" Foreground="#FF0F0FE3">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Foreground" Value="Blue"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                <TextBlock.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding RegisterCommand}"/>
                </TextBlock.InputBindings>
            </TextBlock>
        </Grid>
    </Grid>
</Page>