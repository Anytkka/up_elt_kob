<Page x:Class="Project.Pages.TaskEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Редактирование задачи">

    <Grid Background="#FFF5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Заголовок -->
                <Border Background="#FF000083" CornerRadius="5" Padding="10">
                    <TextBlock Text="{Binding TaskNumber, StringFormat='Задача №{0}'}"
                              Foreground="White" FontSize="18" FontWeight="Bold"/>
                </Border>

                <!-- Основная информация о задаче -->
                <GroupBox Header="Информация о задаче" Margin="0,15,0,10">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Название:" FontWeight="Bold"/>
                            <TextBox Text="{Binding TaskName, Mode=TwoWay}" Grid.Column="1" TextWrapping="Wrap"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Описание:" FontWeight="Bold"/>
                            <TextBox Text="{Binding Description, Mode=TwoWay}" Grid.Column="1" TextWrapping="Wrap"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Срок выполнения:" FontWeight="Bold"/>
                            <DatePicker SelectedDate="{Binding DueDate, Mode=TwoWay}" Grid.Column="1"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Информация о проекте -->

                <!-- Ответственные -->
                <GroupBox Header="Ответственные сотрудники">
                    <ItemsControl ItemsSource="{Binding AllUsers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Grid.Column="0" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding User.FullName}" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>

                <!-- Кнопки действий -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Отмена" Click="CancelButton_Click" Margin="0,0,10,0" Padding="10,5" Background="#FFDDDDDD" Foreground="Black"/>
                    <Button Content="Сохранить" Click="SaveButton_Click" Padding="10,5" Background="#FF000083" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
