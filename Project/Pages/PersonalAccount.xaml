<Page x:Class="Project.Pages.PersonalAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Project.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PersonalAccount">

    <Grid Background="#FFE5E5E5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#F5F5F5" Grid.ColumnSpan="2" Margin="0,0,19,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Личный кабинет" Grid.Row="0"
                   HorizontalAlignment="Center"
                   FontFamily="Verdana" 
                   FontWeight="Bold" 
                   FontSize="18"
                   Margin="0,10"/>

            <Grid Grid.Row="2" Margin="5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="leftProfileImage" Width="30" Height="30" Source="/Image/avata.jpg" Grid.Column="0"/>
                <!-- Обновлен x:Name -->
                <Label Content="{Binding FullName}" Grid.Column="1"
                       Margin="0,0,-4,0" 
                       VerticalAlignment="Center"
                       Foreground="#FF000083" 
                       FontWeight="Bold" 
                       FontFamily="Verdana" FontSize="9"
                       MouseDown="PAText_MouseDown"/>
            </Grid>

            <Button x:Name="Projects" 
                    Content="Проекты" 
                    Click="Bt_Projects"
                    Grid.Row="6" 
                    Height="30" 
                    Margin="10,0" 
                    FontFamily="Verdana" 
                    BorderBrush="#FFDDDDDD"/>
        </Grid>

        <Grid Grid.Column="1" Margin="20,20,20,20" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="67*"/>
                <ColumnDefinition Width="163*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="profileImage" Width="100" Height="100" Source="/Image/avata.jpg" Grid.Row="0" Grid.Column="0"/>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0" Grid.ColumnSpan="2">
                <Label Content="{Binding FullName}"
                       FontFamily="Verdana" 
                       FontWeight="Bold" 
                       FontSize="24"/>
                <Label Content="{Binding Email}" 
                       Margin="0,5,0,0" 
                       FontFamily="Verdana"/>
            </StackPanel>

            <Button x:Name="EditProfile" 
                    Content="Редактировать профиль" 
                    Click="Bt_EditProfile"
                    Height="30" 
                    Margin="0,65,90,5" 
                    Grid.Column="2" 
                    Background="#FF000083" 
                    Foreground="White" 
                    FontFamily="Verdana" 
                    BorderBrush="#FF000083" HorizontalAlignment="Right" Width="190"/>

            <Button x:Name="Exit" 
                    Content="Выйти" 
                    Click="Bt_Exit"
                    Height="30" 
                    Margin="236,65,0,5" 
                    Grid.Column="2" 
                    Background="#FF000083" 
                    Foreground="White" 
                    FontFamily="Verdana" 
                    BorderBrush="#FF000083" 
                    HorizontalAlignment="Right" Width="80"/>

            <Label Content="О себе" 
                   Grid.Row="4" 
                   Grid.ColumnSpan="3"
                   FontFamily="Verdana" 
                   FontWeight="Bold" 
                   FontSize="14"/>

            <TextBlock Grid.Row="6" 
                       Grid.ColumnSpan="3" 
                       TextWrapping="Wrap"
                       Text="{Binding Biography}"
                       FontFamily="Verdana" Margin="0,5,0,0"/>
        </Grid>
    </Grid>
</Page>