<Page x:Class="Project.Pages.ViewProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Просмотр проекта">

    <Grid Background="#FFE5E5E5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок проекта -->
            <StackPanel Grid.Row="0">
                <Label x:Name="NameProjectLabel" 
                       Content="{Binding Name}"
                       FontFamily="Malgun Gothic" 
                       FontSize="18" 
                       FontWeight="Bold"/>
                <Label x:Name="CreatorLabel"
                       FontFamily="Malgun Gothic" 
                       FontStyle="Italic"/>
                <Label x:Name="DescriptionLabel"
                       FontFamily="Malgun Gothic" 
                       Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Основные данные проекта -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Данные проекта" 
                       FontFamily="Malgun Gothic" 
                       FontWeight="Bold"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Наименование" 
                           FontFamily="Malgun Gothic"/>
                    <Label x:Name="ProjectNameLabel" Grid.Column="1" 
                           FontFamily="Malgun Gothic"/>
                </Grid>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Публичность" 
                           FontFamily="Malgun Gothic"/>
                    <Label x:Name="PublicityLabel" Grid.Column="1" 
                           FontFamily="Malgun Gothic"/>
                </Grid>
            </Grid>

            <!-- Список участников проекта -->
            <StackPanel Grid.Row="4">
                <Label Content="Участники проекта" 
                       FontFamily="Malgun Gothic" 
                       FontWeight="Bold"/>

                <ListView x:Name="MembersListView" Margin="0,10,0,0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FontFamily" Value="Malgun Gothic"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Кнопки управления -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,20,0,0">
                    <Button Content="Закрыть" 
                            Width="150" 
                            Margin="0,0,10,0"
                            FontFamily="Malgun Gothic"
                            Background="#FF0F0FE3" 
                            Foreground="White" 
                            Click="Bt8_Close"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>