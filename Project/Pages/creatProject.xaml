<Page x:Class="Project.Pages.creatProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="CreateProject">

    <Grid Background="#FFE5E5E5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Создание нового проекта" 
                   FontFamily="Malgun Gothic" FontWeight="Bold" FontSize="18"/>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Наименование*" VerticalAlignment="Center" Foreground="Black"/>
                    <TextBox Grid.Column="1" Height="25" Text="Secret_project"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Описание" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                             Text="Описание проекта"/>
                </Grid>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Публичность*" VerticalAlignment="Center" Foreground="Black"/>
                    <ComboBox Grid.Column="1" Height="25" SelectedIndex="1">
                        <ComboBoxItem Content="Открытый"/>
                        <ComboBoxItem Content="Закрытый"/>
                    </ComboBox>
                </Grid>
            </Grid>
            <StackPanel Grid.Row="4">
                <Label Content="Участники проекта" 
                       FontFamily="Malgun Gothic" FontWeight="Bold" FontSize="14"/>

                <Button Content="Добавить участника" Width="150" Margin="0,10,0,10"
                        HorizontalAlignment="Left" Background="#FF0F0FE3" Foreground="White"/>

                <ListView>
                    <ListViewItem>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Фамилия Имя Отчество"/>
                            <Button Grid.Column="1" Content="✕" Foreground="Red" Background="Transparent" 
                                    BorderThickness="0" FontWeight="Bold" Margin="582,0,-609,0"
                                    ToolTip="Удалить участника"/>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Фамилия Имя Отчество"/>
                            <Button Grid.Column="1" Content="✕" Foreground="Red" Background="Transparent" 
                                    BorderThickness="0" FontWeight="Bold" Margin="585,0,-606,0"
                                    ToolTip="Удалить участника"/>
                        </Grid>
                    </ListViewItem>
                </ListView>
            </StackPanel>
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" Width="100" Height="30" Margin="0,0,10,0"
                        Click="Cancel_Click"/>
                <Button Content="Создать" Width="100" Height="30" 
                        Background="#FF0F0FE3" Foreground="White"
                        Click="Create_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>