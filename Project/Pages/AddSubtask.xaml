<Page x:Class="Project.Pages.AddSubtask"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.Pages"
      mc:Ignorable="d"
      Title="AddSubtask" Width="621" Height="309">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="White" Padding="10">
            <Label Content="{Binding Title}" FontFamily="Verdana" Foreground="#FFA6A6A6"/>
        </Border>
        <Border Grid.Row="1" Background="White" Margin="10,10,10,10" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Наименование" Margin="10" VerticalAlignment="Center" FontFamily="Verdana"/>
                <TextBox x:Name="name" Grid.Column="1" Margin="10,0,10,0" Height="30" VerticalAlignment="Center" FontFamily="Verdana"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Описание" Margin="10,0,10,0" VerticalAlignment="Center" FontFamily="Verdana"/>
                <TextBox x:Name="description" Grid.Row="1" Grid.Column="1" Margin="10,0,10,0" Height="60" VerticalAlignment="Center" 
                         AcceptsReturn="True" Text="Опишите подробности" Foreground="#FFA6A6A6" FontFamily="Verdana"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Ответственный" Margin="10,5,10,3" FontFamily="Verdana"/>
                <ComboBox x:Name="кesponsible" Grid.Row="2" Grid.Column="1" Margin="10,3,10,0" Height="30" VerticalAlignment="Top" 
                          BorderBrush="White" Background="#FFE5E5E5" FontFamily="Verdana"
                          DisplayMemberPath="FullName"/>

                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="bt_Cancel" Click="Bt_Cancel" Content="Отмена" Margin="10" Padding="10,5" 
                            Background="White" Foreground="#FF000083" BorderBrush="White" Width="120" FontFamily="Verdana"/>
                    <Button x:Name="bt_Add" Click="Bt_AddS" Content="{Binding ButtonText}" Margin="10" Padding="10,5" 
                            Background="#FF000083" Foreground="White" BorderBrush="#FF000083" Width="120" Height="30" FontFamily="Verdana"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>