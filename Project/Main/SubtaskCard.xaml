<UserControl x:Class="Project.Main.SubtaskCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Width="216"
             x:Name="root">
    <Border Background="LightGray" 
            CornerRadius="5" 
            Padding="5" 
            Margin="5" 
            AllowDrop="True"
            PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown"
            PreviewMouseMove="Border_PreviewMouseMove">
        <StackPanel>
            <TextBlock Text="{Binding SubtaskNumber, ElementName=root, StringFormat='Подзадача #{0}'}" 
                       FontWeight="Bold" 
                       FontFamily="Verdana" 
                       FontSize="9"/>
            <TextBlock Text="{Binding SubtaskName, ElementName=root}" 
                       TextWrapping="Wrap" 
                       FontFamily="Verdana"/>
            <TextBlock Text="{Binding Responsible, ElementName=root, StringFormat='Ответственные: {0}'}" 
                       FontStyle="Italic" 
                       FontFamily="Verdana" 
                       FontSize="9"/>
            <TextBlock Text="{Binding TaskCode, ElementName=root, StringFormat='Код задачи: {0}'}" 
                       Foreground="Blue" 
                       FontFamily="Verdana" 
                       FontSize="9"/>
            <TextBlock Text="{Binding TaskName, ElementName=root, StringFormat='Задача: {0}'}" 
                       Foreground="Blue" 
                       FontFamily="Verdana" 
                       FontSize="9"/>
            <Button Content="Подробнее" 
                    Click="SubtaskButton_Click" 
                    Margin="0,5,0,0" 
                    Background="#FF000083" 
                    BorderBrush="#FF000083" 
                    Foreground="White" 
                    FontFamily="Verdana"/>
        </StackPanel>
    </Border>
</UserControl>